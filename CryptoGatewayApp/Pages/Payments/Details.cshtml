@page "{id:int}"
@model CryptoGatewayApp.Pages.Payments.DetailsModel
@{
    ViewData["Title"] = "Payment Details";
}

<h1>Payment Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Payment ID</dt>
            <dd class="col-sm-9">@Model.Payment.PaymentId</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Payment.Status</dd>

            <dt class="col-sm-3">Pay Address</dt>
            <dd class="col-sm-9">@Model.Payment.PayAddress</dd>

            <dt class="col-sm-3">Price Amount</dt>
            <dd class="col-sm-9">@Model.Payment.PriceAmount</dd>

            <dt class="col-sm-3">Price Currency</dt>
            <dd class="col-sm-9">@Model.Payment.PriceCurrency</dd>

            <dt class="col-sm-3">Pay Amount</dt>
            <dd class="col-sm-9">@Model.Payment.PayAmount</dd>

            <dt class="col-sm-3">Pay Currency</dt>
            <dd class="col-sm-9">@Model.Payment.PayCurrency</dd>

            <dt class="col-sm-3">Order ID</dt>
            <dd class="col-sm-9">@Model.Payment.OrderId</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Payment.Description</dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.Payment.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
        </dl>
    </div>
</div>

<p>
    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@Model.Payment.Id">Edit</a> |
    <a class="btn btn-secondary" asp-page="Index">Back to List</a>
</p>
