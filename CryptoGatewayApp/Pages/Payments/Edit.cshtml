@page "{id:int}"
@model CryptoGatewayApp.Pages.Payments.EditModel
@{
    ViewData["Title"] = "Edit Payment";
}

<h1>Edit Payment</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Payment.Id" />

            <div class="form-group">
                <label asp-for="Payment.PaymentId" class="control-label"></label>
                <input asp-for="Payment.PaymentId" class="form-control" />
                <span asp-validation-for="Payment.PaymentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.Status" class="control-label"></label>
                <input asp-for="Payment.Status" class="form-control" />
                <span asp-validation-for="Payment.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.PayAddress" class="control-label"></label>
                <input asp-for="Payment.PayAddress" class="form-control" />
                <span asp-validation-for="Payment.PayAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.PriceAmount" class="control-label"></label>
                <input asp-for="Payment.PriceAmount" class="form-control" />
                <span asp-validation-for="Payment.PriceAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.PriceCurrency" class="control-label"></label>
                <input asp-for="Payment.PriceCurrency" class="form-control" />
                <span asp-validation-for="Payment.PriceCurrency" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.PayAmount" class="control-label"></label>
                <input asp-for="Payment.PayAmount" class="form-control" />
                <span asp-validation-for="Payment.PayAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.PayCurrency" class="control-label"></label>
                <input asp-for="Payment.PayCurrency" class="form-control" />
                <span asp-validation-for="Payment.PayCurrency" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.OrderId" class="control-label"></label>
                <input asp-for="Payment.OrderId" class="form-control" />
                <span asp-validation-for="Payment.OrderId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.Description" class="control-label"></label>
                <input asp-for="Payment.Description" class="form-control" />
                <span asp-validation-for="Payment.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.CreatedAt" class="control-label"></label>
                <input asp-for="Payment.CreatedAt" class="form-control" />
                <span asp-validation-for="Payment.CreatedAt" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
