@page "{id:int}"
@model CryptoGatewayApp.Pages.Payments.DeleteModel
@{
    ViewData["Title"] = "Delete Payment";
}

<h1>Delete Payment</h1>
<hr />

<h3>Are you sure you want to delete this payment?</h3>

<div>
    <h4>Payment</h4>
    <dl class="row">
        <dt class="col-sm-2">Payment ID</dt>
        <dd class="col-sm-10">@Model.Payment.PaymentId</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Payment.Status</dd>

        <dt class="col-sm-2">Pay Address</dt>
        <dd class="col-sm-10">@Model.Payment.PayAddress</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Payment.PriceAmount @Model.Payment.PriceCurrency</dd>

        <dt class="col-sm-2">Pay Amount</dt>
        <dd class="col-sm-10">@Model.Payment.PayAmount @Model.Payment.PayCurrency</dd>

        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Payment.OrderId</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Payment.Description</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.Payment.CreatedAt.ToString("g")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Payment.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
